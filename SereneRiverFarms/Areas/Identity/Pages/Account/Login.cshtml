@page
 @model LoginModel 
@{
     ViewData["Title"] = "Login";
}


<div class="content-row">
    <div class="col-sma-6 page-content">
        <div class="subtitle-container">
            <h2 class="subtitle-container__subtitle">Login</h2>
            <div class="subheader-divider"></div>
        </div>

        <form class="form login-form" name="loginForm" method="post">
            <div asp-validation-summary="All" class=""></div>
            <div class="form__required">** - Required Field</div>
            <div class="form__input-container">
                <label asp-for="Input.userEmail" class="form__label" for="userEmail">Email **</label>
                <input asp-for="Input.userEmail" id="userEmail" class="form__input" type="text" name="userEmail" />
                <span asp-validation-for="Input.userEmail" class=""></span>
                <div class="clear-both"></div>
            </div>
            <div class="form__input-container">
                <label asp-for="Input.userPassword" class="form__label" for="userPassword">Password **</label>
                <input asp-for="Input.userPassword" id="userPassword" class="form__input" type="password" name="userPassword" />
                <span asp-validation-for="Input.userPassword" class=""></span>
                <div class="clear-both"></div>
            </div>
            <div class="form__input-container">
                <input id="contactButton" class="form__submit-button" type="submit" name="submitButton" value="Sign In!" />
                <div class="form__errors"></div>
            </div>
        </form>
    </div>
    <div class="col-sma-6">
        <div class="background-hero-image login">

        </div>
    </div>
</div>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        setCurrentPage(1, ".register-login", ".register-login__link");
        setCurrentPage(1, ".register-login", ".register-login__link");
    });
</script>
