@page
@model SereneRiverFarms.Areas.Identity.Pages.Account.AccountHomeModel
@{
    ViewData["Title"] = "Account Home";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<SereneRiverFarms.Areas.Identity.Data.SereneRiverFarmsUser> SignInManager
@inject UserManager<SereneRiverFarms.Areas.Identity.Data.SereneRiverFarmsUser> UserManager


<div class="content-row">
    <div class="col-sma-6 page-content">
        <div class="subtitle-container">
            <h2 class="subtitle-container__subtitle">Account Home</h2>
            <div class="subheader-divider"></div>
        </div>
        <div class="account-info">
            <p class="account-info__user-name">Signed in as: @UserManager.GetUserName(User)</p>
        </div>
        <div class="account-benefits">
            <h3>Benefits of Having an Account</h3>
            <ul class="list-with-bullet-points">
                <li>Get 20% off tour visits.  Redeem on visit by providing your email.</li>
                <li>Get 20% off shipping.  When you request an order, we check your email to see if we can apply the discount.</li>
                <li>Special Offers only for Registered Members</li>
            </ul>
        </div>
        <div class="account-specials">
            <h3>This Month's Special Offer</h3>
            <h4>Jam Bazaar (all month): 40% Off First 5 Jars Coupon!</h4>
            <p>
                Visit the Farm Store in person and get 40% off the original price on any jam, first 5! While supplies last. Just show this on your device or printed out.
                Only for registered users in store!
            </p>
        </div>

    </div>
    <div class="col-sma-6">
        <h3>Manage Account</h3>
        <div class="account-nav">
            <a class="account-nav__link" href="/Identity/Account/AccountHome">Account Home</a>
            <a class="account-nav__link" href="/Identity/Account/Settings">Settings</a>
            <a class="account-nav__link" href="/Identity/Account/DeleteAccount">Remove Account</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function () {
        setCurrentPage(0, ".register-login", ".register-login__link");
        setCurrentPage(0, ".register-login", ".register-login__link");
    });
</script>