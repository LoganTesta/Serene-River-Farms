                    <label class="form__label" for="userNameNew">New UserName **</label>
                    <input id="userNameNew" class="form__input" type="text" name="userNameNew" />
                    <span></span>
                    <div class="clear-both"></div>
                </div>
                <div class="form__input-container">
                    <input id="changeUserNameButton" asp-page-handler="ChangeUserNameSection" class="form__submit-button" type="submit" name="changeUserNameButton" value="Change UserName!" />
                    <div class="form__errors"></div>
                </div>
            </form>
        </div>
