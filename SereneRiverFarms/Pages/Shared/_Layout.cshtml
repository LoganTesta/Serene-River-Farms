
@{
    int currentYear = DateTime.Now.Year;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="farm, serene, river, Willamette Valley, Carlton, Oregon, fresh, dairy, produce, berries, pears, apples, jams, pies, tours, pumpkins" />
    <meta name="description" content="Buy fresh produce, dairy, and more at Serene River Farms.  We also provide tours and are located near Carlton, Oregon near McMinnville." />
    <title>@ViewData["Title"] - Serene River Farms</title>

    <environment include="Development, Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
        <link rel="icon" type="image/png" href="/assets/images/favicon.png" />
        <link rel="stylesheet" href="~/assets/css/main-styles.css?mod=04172020" />
        <link rel="stylesheet" href="~/assets/css/print-styles.css?mod=10012019" media="print" />
    </environment>
</head>
<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-114894181-2"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'UA-114894181-2');
</script>
<body>
    <div class="body-wrapper">
        <header class="header">
            <div class="header__background"></div>
            <div class="inner-wrapper">
                <div class="main-title-container">
                    <h1><a href="/Index" class="main-title__title">Serene River Farms</a></h1>
                </div>
                <div class="logo-container">
                    <a href="/index">
                        <img src="~/assets/images/logo.png" alt="Serene River Farms" />
                    </a>
                </div>
                <nav class="nav mobile-nav" id="mobileNav">
                    <div class="nav__nav-list-container">
                        <div class="nav__nav-list">
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/About">About Us</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/OurFarm">Our Farm</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/OurProducts">Products</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Recipes">Recipes</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Events">Events</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Blog">Blog</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Contact">Contact Us</a></div>
                        </div>
                    </div>
                </nav>
                <nav class="nav desktop-nav" id="desktopNav">
                    <div class="nav__nav-list-container">
                        <div class="nav__nav-list">
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/About">About Us</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/OurFarm">Our Farm</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/OurProducts">Products</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Recipes">Recipes</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Events">Events</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Blog">Blog</a></div>
                            <div class="nav__nav-item"><a class="nav__nav-link" asp-page="/Contact">Contact Us</a></div>
                        </div>
                    </div>
                </nav>
            </div>
            <partial name="_LoginLogoutPartial" />
        </header>
        <div class="content">
            <div class="inner-wrapper">
                @RenderBody()
            </div>
        </div>
        <footer class="footer">
            <div class="footer__background">
                <div class="inner-wrapper">
                    <div class="footer__copyright">&copy; @currentYear Serene River Farms.  All Rights Reserved.</div>
                    <div class="content-row">
                        <div class="col-sma-4">
                            <div class="footer__locations">
                                <h4 class="footer__subheading">Location</h4>
                                <p>88002 Plains Highway</p>
                                <p>Carlton, Oregon 97111</p>
                            </div>
                        </div>
                        <div class="col-sma-4">
                            <div class="footer__phone">
                                <h4 class="footer__subheading">Reach Us At:</h4>
                                <p>503-882-8888</p>
                            </div>
                        </div>
                        <div class="col-sma-4">
                            <div class="footer__hours">
                                <h4 class="footer__subheading">Farm Store Hours</h4>
                                <p>Monday-Friday: 10am-6pm</p>
                                <p>Saturday, Sunday: 10am-5pm</p>
                            </div>
                        </div>
                    </div>
                    <div class="content-row">
                        <div class="col-sma-3">&nbsp;</div>
                        <div class="col-sma-6">
                            <div class="footer__privacy">
                                <a class="footer__privacy-link" href="/PrivacyPolicy">Privacy Policy</a>
                            </div>
                        </div>
                        <div class="col-sma-3">&nbsp;</div>
                    </div>
                    <div class="content-row">
                        <div class="col-sma-3">&nbsp;</div>
                        <div class="col-sma-6 justify-content">
                            <div class="footer__social">
                                <div class="footer__social-item">
                                    <a class="footer__social-link" href="/">
                                        <i class="fab fa-facebook-f fa-2x social-icon"><span class="sr-only">Facebook</span></i>
                                    </a>
                                </div>
                                <div class="footer__social-item">
                                    <a class="footer__social-link" href="/">
                                        <i class="fab fa-pinterest fa-2x social-icon"><span class="sr-only">Pinterest</span></i>
                                    </a>
                                </div>
                                <div class="footer__social-item">
                                    <a class="footer__social-link" href="/">
                                        <i class="fab fa-instagram fa-2x social-icon"><span class="sr-only">Instagram</span></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sma-3">&nbsp;</div>
                    </div>
                </div>
            </div>
        </footer>
        <partial name="_CookiePrivacyPartial" />
    </div>

    <environment include="Development, Production">
        <script src="~/assets/javascript/javascript-jquery-functions.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
